<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rafaelfraga.appdespesas">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ReceitasActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AppTheme"
            android:label="Cadastrar Receita"
            android:parentActivityName=".activities.DashboardActivity"/>

        <activity android:name=".activities.DespesasActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AppTheme"
            android:label="Cadastrar Despesa"
            android:parentActivityName=".activities.DashboardActivity"/>

        <activity android:name=".activities.DashboardActivity"
            android:theme="@style/DashboardTheme"/>

        <activity android:name=".activities.LoginActivity"
            android:label="Login"
            android:windowSoftInputMode="adjustResize"/>

        <activity android:name=".activities.CadastrarActivity"
            android:label="Cadastrar"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>